
<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" >@User.Identity.Name</a>
        </li>
        <li class="nav-item">
            <form class="form-inline"   asp-action="signout" asp-controller="user" >
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark"  asp-action="signup" asp-controller="user">Signup</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark"  asp-action="Signin" asp-controller="user">Signin</a>
        </li>
    }
</ul>