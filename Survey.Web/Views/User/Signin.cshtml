
@{
    ViewBag.Title = "Sign in";
    var url = ViewBag.Url;
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="#">User</a></li>
        <li class="breadcrumb-item active" aria-current="page">Sign in</li>
    </ol>
</nav>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @*@using (Html.BeginForm("signin", "user", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))*@
            @using (Html.BeginForm("signin", "user", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">

                    <div class="col-md-10">
                        <input type="text" id="email" placeholder="Email" class="form-control" />
                    </div>
                </div>
                <div class="form-group">

                    <div class="col-md-10">
                        <input type="password" id="password" placeholder="Password" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            @*@Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)*@
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="button" value="Sign in" class="btn btn-default" onclick="signin();"/>
                    </div>
                </div>
                <p>
                    @*@Html.ActionLink("Register as a new user", "Register")*@
                </p>

            }
        </section>
    </div>

</div>


<script>
    function signin() {

        var email = $("#email").val();
        var password = $("#password").val();

        if (email == '') {
            swal.fire(
                'warning!',
                'Please Enter Email',
                'warning'
            );
            return;
        }
        if (password == '') {
            swal.fire(
                'warning!',
                'Please Enter Password',
                'warning'
            );
            return;
        }

        var data = {
            email: email,
            password: password,
        };
        $.ajax({
            type: "POST",
            url: "/user/signin",
            data: data,
            success: function (result) {
                if (result.isSuccess ) {
                    window.location.replace('@url');
                }
                else {

                    swal.fire(
                        'warning!',
                        result.message,
                        'warning'
                    );
                }
            },
            error: function (request, status, error) {
                swal.fire(
                    'warning!',
                    request.responseText,
                    'warning'
                );
            }
        });
    }
</script>